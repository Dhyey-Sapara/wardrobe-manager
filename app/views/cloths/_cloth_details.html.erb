<% if @cloth.image.attached? %>
  <div class="w-full h-96 bg-gray-200">
    <%= image_tag @cloth.image, class: "w-full h-full object-contain" %>
  </div>
<% end %>

<div class="px-4 py-5 sm:px-6">
  <h1 class="text-3xl font-bold text-gray-900"><%= @cloth.name %></h1>
</div>

<div class="border-t border-gray-200 px-4 py-5 sm:px-6">
  <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
    <div>
      <dt class="text-sm font-medium text-gray-500">Type</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @cloth.cloth_type.titleize %></dd>
    </div>
    
    <div>
      <dt class="text-sm font-medium text-gray-500">Location</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @cloth.location.titleize %></dd>
    </div>
    
    <% if @cloth.color.present? %>
      <div>
        <dt class="text-sm font-medium text-gray-500">Color</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @cloth.color %></dd>
      </div>
    <% end %>
    
    <% if @cloth.company.present? %>
      <div>
        <dt class="text-sm font-medium text-gray-500">Company</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @cloth.company %></dd>
      </div>
    <% end %>
    
    <% if @cloth.description.present? %>
      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">Description</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @cloth.description %></dd>
      </div>
    <% end %>
  </dl>
</div>