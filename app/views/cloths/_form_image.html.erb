<div>
  <%= form.label :image, class: "block text-sm font-medium text-gray-700" %>
  <%= form.file_field :image, accept: "image/*", class: "mt-1 block w-full" %>
  <% if cloth.image.attached? %>
    <div class="mt-2">
      <%= image_tag cloth.image, class: "h-32 w-32 object-cover rounded" %>
    </div>
  <% end %>
</div>